@using Homebank.Web.Models.TemplateRendering

<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=Edge" />
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Homebank</title>
		@Styles.Render("~/bundles/Content/themes/dark-hive/style")
		@Styles.Render("~/bundles/styles")
		@Scripts.Render("~/bundles/scripts")
	</head>
	<body>
		<div class="navbar navbar-inverse navbar-static-top">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					@Html.ActionLink("Homebank", "Index", "Home", null, new { @class = "navbar-brand" })
				</div>
				<div class="navbar-collapse collapse">
					@if (ViewBag.Username != null)
					{
						<ul class="nav navbar-nav">
							<li>@Html.ActionLink("Overview", "Overview", "Home")</li>
							<li>@Html.ActionLink("Accounts", "List", "Account")</li>
							<li>@Html.ActionLink("Categories", "List", "Category")</li>
							<li>@Html.ActionLink("Templates", "List", "Template")</li>
							<li>@Html.ActionLink("Reporting", "Index", "Reporting")</li>
							@if (((List<Template>) ViewBag.Templates).Count > 0)
							{
								<li class="dropdown">
									<a href="#" class="dropdown-toggle" data-toggle="dropdown">Add transaction <b class="caret"></b></a>
									<ul class="dropdown-menu">
										@foreach (var template in (List<Template>) ViewBag.Templates)
										{
											if (template.IsTitle)
											{
												<li class="dropdown-header">@template.Name</li>
											}

											if (template.IsSeperator)
											{
												<li class="divider"></li>
											}

											if (!template.IsSeperator && !template.IsTitle)
											{
												<li>
													<a href="@template.Link">@template.Name</a>
												</li>
											}
										}
									</ul>
								</li>
							}
						</ul>
					}
					@if (ViewBag.Username == null)
					{
						<ul class="nav navbar-nav navbar-right">
							<li>@Html.ActionLink("Register", "Register", "Security")</li>
							<li>@Html.ActionLink("Login", "Login", "Security")</li>
						</ul>
					}
					else
					{
						<ul class="nav navbar-nav navbar-right">
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Logged in as @ViewBag.Username <b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li>@Html.ActionLink("Settings", "Settings", "User")</li>
									<li>@Html.ActionLink("Logout", "Logout", "Security")</li>
								</ul>
							</li>
						</ul>
					}
				</div>
			</div>
		</div>
		<div class="container-fluid body-content">
			@if (ViewBag.Header != null)
			{
				<div class="page-header">
					<h1>@ViewBag.Header</h1>
				</div>
			}
			
			@if (ViewBag.Success != null)
			{
				<div class="alert alert-success">@ViewBag.Success</div>
			}
			
			@RenderBody()

			<hr />
			<footer>
				<p>&copy; @DateTime.Now.Year - Homebank  - @Html.Partial("ViewSwitcher") </p>
			</footer>
		</div>

		
		@RenderSection("scripts", false)
	
		<script type="text/javascript">
			function confirmDelete(text) {
				return confirm(text);
			}
		</script>
	</body>
</html>
