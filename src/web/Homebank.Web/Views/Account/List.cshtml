@model IList<Homebank.Entities.Account>

<div class="page-header">
	<div class="btn-group pull-right">
		<a href="@Url.Action("Add", "Account")" class="btn btn-primary">Add</a>
	</div>
	<h1>Accounts</h1>
</div>

<div class="row">
	<div class="col-md-12 col-sm-12">
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Name</th>
					<th>Active</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var account in Model)
				{
					<tr>
						<td>@account.Name</td>
						<td>
							@if (account.Active)
							{
								<span class="glyphicon glyphicon-ok"></span>
							}
						</td>
                        <td>
                            @if (account.ControlDate != null)
                            {
                                @account.ControlDate.Value.ToString("YYYY-mm-dd")
                            }
                        </td>
						<td>
							@Html.ActionLink("Edit", "Edit", "Account", new { id = account.Id }, new { @class = "btn btn-primary btn-sm"})
							@Html.ActionLink("Remove", "Remove", "Account", new { id = account.Id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Do you really want to delete \"" + account.Name + "\"?')"})
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>