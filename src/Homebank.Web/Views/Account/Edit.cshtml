@model Homebank.Web.Models.AccountModel

<div class="row">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card">
            <div class="card-header">
                <h4>Account</h4>
            </div>
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <form method="post">
                                <div class="form-group row">
                                    <label asp-for="Name" class="col-sm-5 col-form-label"></label>
                                    <div class="col-sm-5">
                                        <input type="text" asp-for="Name" asp-invalid-for="Name" class="form-control" placeholder="Name" value="@Model?.Name" />
                                        <span asp-validation-for="Name" class="invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Active" class="col-sm-5 col-form-label"></label>
                                    <div class="col-sm-5 form-check">
                                        <div class="form-check">
                                            <input type="checkbox" asp-for="Active" asp-invalid-for="Active" class="form-check-input" />
                                        </div>                                        
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="ControlDate" class="col-sm-5 col-form-label">Control Date</label>
                                    <div class="col-sm-5">
                                        <input type="date" asp-for="ControlDate" asp-invalid-for="ControlDate" class="form-control" value="@Model?.ControlDate?.ToString("yyyy-MM-dd")" />
                                        <span asp-validation-for="ControlDate" class="invalid-feedback"></span>
                                    </div>
                                </div>
                                <button asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>