@model Homebank.Web.Models.TemplateModel

<div class="row">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card">
            <div class="card-header">
                <h4>Category</h4>
            </div>
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <form method="post">
                                <div class="form-group row">
                                    <label asp-for="Name" class="col-sm-5 col-form-label"></label>
                                    <div class="col-sm-5">
                                        <input type="text" asp-for="Name" asp-invalid-for="Name" class="form-control" placeholder="Name" value="@Model?.Name" />
                                        <span asp-validation-for="Name" class="invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="AccountId" class="col-sm-5 col-form-label">Account</label>
                                    <div class="col-sm-5">
                                        @Html.DropDownListFor(m => m.AccountId, new SelectList(Model.Accounts, "Key", "Value"), new { @class = "form-control" })
                                        <span asp-validation-for="AccountId" class="invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Amount" class="col-sm-5 col-form-label"></label>
                                    <div class="col-sm-5">
                                        <input type="text" asp-for="Amount" asp-invalid-for="Amount" class="form-control" value="@Model?.Amount" />
                                        <span asp-validation-for="Amount" class="invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Description" class="col-sm-5 col-form-label"></label>
                                    <div class="col-sm-5">
                                        <textarea asp-for="Description" asp-invalid-for="Description" class="form-control">@Model?.Description</textarea>
                                        <span asp-validation-for="Description" class="invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="CategoryId" class="col-sm-5 col-form-label">Category</label>
                                    <div class="col-sm-5">
                                        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Key", "Value"), new { @class = "form-control" })
                                        <span asp-validation-for="CategoryId" class="invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="ReferenceAccountId" class="col-sm-5 col-form-label">Reference account</label>
                                    <div class="col-sm-5">
                                        @Html.DropDownListFor(m => m.ReferenceAccountId, new SelectList(Model.ReferenceAccounts, "Key", "Value"), new { @class = "form-control" })
                                        <span asp-validation-for="ReferenceAccountId" class="invalid-feedback"></span>
                                    </div>
                                </div>
                                <button asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>