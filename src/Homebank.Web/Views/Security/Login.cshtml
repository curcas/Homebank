@{
    @model Homebank.Web.Models.LoginModel
}

<div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-9">
        <div class="card border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Login</h1>
                            </div>
                            <form asp-controller="Security" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post">
                                <div class="form-group">
                                    <input type="text" asp-for="Name" asp-invalid-for="Name" class="form-control" placeholder="Name" value="@Model?.Name" />
                                    <span asp-validation-for="Name" class="invalid-feedback"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" asp-invalid-for="Password" class="form-control" placeholder="Password" />
                                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-controller="Security" asp-action="Register">Create an Account!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>