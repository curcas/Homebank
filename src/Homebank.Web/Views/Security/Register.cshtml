@model Homebank.Web.Models.RegisterModel

<form method="POST" role="form" class="form-horizontal">
	@Html.AntiForgeryToken()
	<div class="form-group">
		@Html.LabelFor(m => m.Name, "Name", new { @class = "col-md-2 col-sm-2 control-label" })
		<div class="col-md-10 col-sm-10">
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
			@Html.ValidationMessageFor(m => m.Name, "", new { @class = "help-block text-danger"})
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Password, "Password", new { @class = "col-md-2 col-sm-2 control-label" })
		<div class="col-md-10 col-sm-10">
			@Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
			@Html.ValidationMessageFor(m => m.Password, "", new { @class = "help-block text-danger" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.ConfirmPassword, "Confirm password", new { @class = "col-md-2 col-sm-2 control-label" })
		<div class="col-md-10 col-sm-10">
			@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Password" })
			@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "help-block text-danger" })
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-sm-offset-2 col-md-10 col-sm-10">
			<button type="submit" class="btn btn-default">Register</button>
		</div>
	</div>
</form>
